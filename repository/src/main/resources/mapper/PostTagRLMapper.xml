<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.isparks.dao.mybatis.mapper.PostTagRLMapper">

    <sql id="table">
        post_tag_rl
    </sql>

    <sql id="selectAll">
        SELECT id,post_id,tag_id,create_time,modify_time FROM
        <include refid="table"/>
    </sql>

    <resultMap id="resultMap" type="app.isparks.core.pojo.entity.relation.PostTagRL">
        <id property="id" column="id"/>
        <result property="postId" column="post_id"/>
        <result property="tagId" column="tag_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>

    <!-- 新增数据 -->
    <insert id="insert">
        INSERT INTO
        <include refid="table"/>
        (
        <if test="postId != ''">post_id,</if>
        <if test="tagId != ''">tag_id,</if>
        id,create_time,modify_time,status
        )
        VALUES
        (
        <if test="postId != ''">#{postId},</if>
        <if test="tagId != ''">#{tagId},</if>
        #{id},#{createTime},#{modifyTime},#{status}
        )
    </insert>

    <!-- 根据 post id 删除 -->
    <delete id="deleteByPost">
        DELETE FROM
        <include refid="table"/>
        where post_id = #{postId}
    </delete>

    <!-- 根据 tag id 删除 -->
    <delete id="deleteByTag">
        DELETE FROM
        <include refid="table"/>
        where tag_id = #{tagId}
    </delete>

    <delete id="deleteByCond">
        DELETE FROM
        <include refid="table"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="postId != null and postId != ''">
                AND postId = #{postId}
            </if>
            <if test="tagId != null and tagId != ''">
                AND tagId = #{tagId}
            </if>
        </where>
    </delete>

    <!-- 根据 post id 查找 -->
    <select id="selectByPost" resultMap="resultMap">
        <include refid="selectAll"/>
        WHERE post_id = #{postId}
    </select>

    <!-- 根据 tag id 查找 -->
    <select id="selectByTag" resultMap="resultMap">
        <include refid="selectAll"/>
        WHERE tag_id = #{tagId}
    </select>

    <!-- 根据 post 和 tag id 查找 -->
    <select id="selectByPostAndTag" resultMap="resultMap">
        <include refid="selectAll"/>
        WHERE tag_id = #{tagId} AND post_id = #{postId}
    </select>

    <!-- 根据条件查询你 -->
    <select id="selectByCond" resultMap="resultMap" resultType="list">
        <include refid="selectAll"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="postId != null and postId != ''">
                AND postId = #{postId}
            </if>
            <if test="tagId != null and tagId != ''">
                AND tagId = #{tagId}
            </if>
        </where>
    </select>

    <update id="updateById">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="postId != null and postId != ''">postId = #{postId} ,</if>
            <if test="tagId != null and tagId != ''">tagId = #{tagId} ,</if>
            <if test="status != null">status = #{status} ,</if>
            modify_time = #{modifyTime}
        </set>
        WHERE
        id = #{id}
    </update>

    <select id="countByCond" resultType="long">
        SELECT count(1)
        FROM
        <include refid="table"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="postId != null and postId != ''">
                AND postId = #{postId}
            </if>
            <if test="tagId != null and tagId != ''">
                AND tagId = #{tagId}
            </if>
        </where>
    </select>

</mapper>