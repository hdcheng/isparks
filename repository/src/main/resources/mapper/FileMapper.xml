<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.isparks.dao.mybatis.mapper.FileMapper">

    <sql id="table">
        file
    </sql>

    <sql id="selectAll">
        SELECT id,status,create_time,modify_time,name,media_type,file_type,origin,location
        FROM
        <include refid="table"/>
    </sql>

    <sql id="count">
        SELECT count(1)
        FROM
        <include refid="table"/>
    </sql>

    <resultMap id="resultMap" type="app.isparks.core.pojo.entity.FFile">
        <id property="id" column="id"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="name" property="name"/>
        <result column="file_type" property="fileType"/>
        <result column="media_type" property="mediaType"/>
        <result column="origin" property="origin"/>
        <result column="location" property="location"/>
    </resultMap>

    <!-- 新增数据 -->
    <insert id="insert">
        INSERT INTO
        <include refid="table"/>
        (
        <if test="name != null and name != ''">name,</if>
        <if test="mediaType != null and mediaType != ''">media_type,</if>
        <if test="fileType != null and fileType != ''">file_type,</if>
        <if test="origin != null and origin != ''">origin,</if>
        <if test="location != null and location != ''">location,</if>
        id,create_time,modify_time,status
        )
        VALUES
        (
        <if test="name != null and name != ''">#{name},</if>
        <if test="mediaType != null and mediaType != ''">#{mediaType},</if>
        <if test="fileType != null and fileType != ''">#{fileType},</if>
        <if test="origin != null and origin != ''">#{origin},</if>
        <if test="location != null and location != ''">#{location},</if>
        #{id},#{createTime},#{modifyTime},#{status}
        )
    </insert>

    <!-- 根据id删除 -->
    <delete id="delete">
        DELETE FROM
        <include refid="table"/>
        WHERE id = #{id}
    </delete>

    <delete id="deleteByCond">
        DELETE FROM
        <include refid="table"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="mediaType != null and mediaType != ''">
                AND media_type = #{mediaType}
            </if>
            <if test="fileType != null and fileType != ''">
                AND file_type = #{fileType}
            </if>
            <if test="origin != null and origin != ''">
                AND origin = #{origin}
            </if>
            <if test="location != null and location != ''">
                AND location = #{location}
            </if>
        </where>
    </delete>

    <!-- 根据条件更新 -->
    <update id="updateById">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="status != null and status != ''">status = #{status} ,</if>
            modify_time = #{modifyTime}
        </set>
        WHERE
        id = #{id}
    </update>

    <!-- 根据条件查找 -->
    <select id="selectByCond" resultType="list" resultMap="resultMap">
        <include refid="selectAll"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="mediaType != null and mediaType != ''">
                AND media_type = #{mediaType}
            </if>
            <if test="fileType != null and fileType != ''">
                AND file_type = #{fileType}
            </if>
            <if test="origin != null and origin != ''">
                AND origin = #{origin}
            </if>
            <if test="location != null and location != ''">
                AND location = #{location}
            </if>
        </where>
    </select>

    <!-- 根据条件统计 -->
    <select id="countByCond" resultType="long">
        <include refid="count"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="mediaType != null and mediaType != ''">
                AND media_type = #{mediaType}
            </if>
            <if test="fileType != null and fileType != ''">
                AND file_type = #{fileType}
            </if>
            <if test="origin != null and origin != ''">
                AND origin = #{origin}
            </if>
            <if test="location != null and location != ''">
                AND location = #{location}
            </if>
        </where>
    </select>

</mapper>